# ==========================================
# Configurações do Flask
# ==========================================
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=1
PORT=5000
PYTHONUNBUFFERED=1

# ==========================================
# Configurações de Segurança
# ==========================================
# Gere uma chave secreta forte usando: python -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hora em segundos
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 dias em segundos

# ==========================================
# Configurações do MongoDB
# ==========================================
# URI do MongoDB sem autenticação
MONGO_URI=mongodb://mongo:27017/calmwave
MONGO_PORT=27017
MONGO_DATABASE=calmwave

# ==========================================
# URLs dos Serviços
# ==========================================
# URL do serviço de denoising externo
DENOISE_SERVER=http://localhost:8000
# URL base da API (usado para gerar URLs completas)
BASE_URL=http://localhost:5000

# ==========================================
# Diretórios de Arquivos
# ==========================================
# Diretórios dentro do container
UPLOAD_FOLDER=uploads
TEMP_FOLDER=temp
PROCESSED_FOLDER=processed

# ==========================================
# Configurações de Upload
# ==========================================
# Tamanho máximo de upload (16MB)
MAX_CONTENT_LENGTH=16777216
# Extensões permitidas
ALLOWED_EXTENSIONS=m4a,wav,mp3

# ==========================================
# Configurações de Log
# ==========================================
LOG_LEVEL=INFO
LOG_FILE=app.log

# ==========================================
# Configurações de CORS
# ==========================================
CORS_ORIGINS=*

# ==========================================
# Configurações de Rate Limiting
# ==========================================
RATELIMIT_DEFAULT=200 per day
RATELIMIT_STORAGE_URL=memory://

# ==========================================
# Configurações de Timeout
# ==========================================
REQUEST_TIMEOUT=30  # segundos

# ==========================================
# Configurações de Timeout para Denoising
# ==========================================
DENOISE_TIMEOUT=300  # segundos 